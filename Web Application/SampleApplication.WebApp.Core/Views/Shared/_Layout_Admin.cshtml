<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<title>@ViewBag.Title</title>
	<meta name="viewport" content="width=device-width" />

	@* ********************************************* Start Styles ********************************************* *@
	<link href="~/Content/administration.css" rel="stylesheet" />
    <link href="~/Content/ui.spinner.css" rel="stylesheet" />
    <link id="theme" href="" rel="stylesheet" />
    <link href="~/Content/bootstrap3.0.1/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Scripts/SmartWizard/styles/smart_wizard.css" rel="stylesheet" />

    <link href="~/Content/icheck/skins/all.css?v=0.9.1" rel="stylesheet">
    
	@* ********************************************* End Styles ********************************************* *@

	@* ********************************************* Start Javascript ********************************************* *@
    
    <script src="@Url.Content("~/Scripts/Infragistics/modernizr.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Scripts/Infragistics/infragistics.loader.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ui.spinner.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Scripts/Common.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.js")"></script>
	<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")"></script>
    <script src="@Url.Content("~/Scripts/SmartWizard/js/jquery.smartWizard.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Scripts/jquery.icheck.js?v=0.9.1")" type="text/javascript"></script>

    @RenderSection("inlineStyle", required: false)

	<script type="text/javascript">
	    
	    $(document).ready(function () {

	        var theme = hostUrl + "Content/themes/" + themeName + "/jquery-ui.css";
	        
	        $("head link#theme").attr("href", theme);
        
	    });

	</script>

    
	@* ********************************************* End Javascript ********************************************* *@

</head>
<body>
    <div id="mainContainer" class="container">
       <div class="clearfix-10"></div>
        <br /><br />
		<div id="bodyContainer">
			<div id="leftContainer">
				@Html.Action("TempBuildMenu", "Menu")
			</div>
			<div id="rightContainer">
                <div id="rightContent">
                    @RenderBody()
				</div>
			</div>
		</div>
		<div class="clearfix-sm"></div>
		<div id="footerContainer">

		</div>
	</div>
</body>
</html>

@RenderSection("Scripts", required: false)